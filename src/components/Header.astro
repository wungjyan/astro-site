---
import { SITE } from "@config";
import ToggleThemeBtn from "./ToggleThemeBtn.astro";
---

<header class="w-full relative">
  <div class="nav-container">
    <div class="logo">
      <a href="/" title={SITE.title}>{SITE.title}</a>
      <a target="_blank" href="/rss.xml" aria-label="rss feed" title="RSS Feed">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="1em"
          height="1em"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27zm0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93z"
          ></path>
        </svg>
      </a>
    </div>
    <nav id="nav-menu">
      <ul class="flex">
        <li><a href="/about/">关于</a></li>
        <li>
          <ToggleThemeBtn />
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .nav-container {
    @apply max-w-2xl mx-auto flex justify-between items-center sm:py-8;
  }
  .logo {
    @apply font-extrabold text-3xl text-skin-base;
  }
  ul li {
    @apply flex items-center justify-center ml-5 p-1;
  }
  ul li a {
    @apply text-skin-base font-medium w-full;
  }
</style>
