---
import formatDate from "@utils/getFormatDate";
const { postDetail } = Astro.props;
console.log("ðŸš€ ~ postDetail:", postDetail);

const {
  data: { title, pubDate },
  slug,
} = postDetail;
---

<article class="mb-5 flex items-center">
  <h2 class="post-title" transition:name={title}>
    <a href={`/blog/${slug}/`}> {title}</a>
  </h2>
  <p class="post-meta" transition:name={formatDate(pubDate)}>
    {formatDate(pubDate)}
  </p>
</article>

<style>
  .post-title {
    @apply text-lg text-skin-base font-medium;
  }
  .post-meta {
    @apply text-skin-base opacity-60 text-sm my-2 ml-2;
  }
</style>
